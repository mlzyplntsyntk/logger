{
	"compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "typeRoots": [
          "node_modules/@types"
        ],
        "lib": [
          "es2015",
          "es2016",
          "dom"
      ]
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "helper/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}